<?xml version="1.0" encoding="UTF-8"?>

<launch>
    <arg name="robot" value="maggie" />

    <!-- DEVICES - -->
    <include file="$(find maggie_bringup)/launch/maggie_devices.launch" />

    <!-- launch the TF's -->
    <node pkg="tf" type="static_transform_publisher" name="base_link_tf_broadcaster"
          args="0 0 0.75   0 0 0   odom  base_link   100"/>
    <node pkg="tf" type="static_transform_publisher" name="kinect_tf_broadcaster"
        args="0 0 0   0 0 0   base_link   $(arg robot)_camera_link   100"/>

    <!-- SKILLS - -->
    <include file="$(find maggie_bringup)/launch/maggie_skills.launch" />

    <!-- INTERACTION SKILLS: DIALOG MANAGER, MULTIMODAL FUSION, MULTIMODAL FISION, ASR, ETTS, ETC- -->
    <include file="$(find maggie_bringup)/launch/maggie_interaction.launch" />

    <!-- NAVIGATION USING MAP -->
    <include file="$(find maggie_bringup)/launch/maggie_navigation.launch" />
</launch>
